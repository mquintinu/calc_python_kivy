#:kivy 1.0
<MeuLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        TextInput:
            id: calc_tela
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, .15)

        GridLayout:
            cols: 4
            rows: 5

            Button:
                text: "%"
                font_size: 32
                size_hint: (.2, .2)

            Button:
                text: "C"
                font_size: 32
                size_hint: (.2, .2)
                on_press: root.limpar()

            Button:
                id: limpar
                text: u"\u00AB"
                font_size: 32
                size_hint: (.2, .2)
                on_press: root.Apaga()

            Button:
                text: "/"
                font_size: 32
                size_hint: (.2, .2)
                on_press: root.Sinal_matematico("/")

            Button:
                text: "7"
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.btnPress(7)

            Button:
                text: "8"
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.btnPress(8)

            Button:
                text: "9"
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.btnPress(9)

            Button:
                text: "x"
                font_size: 32
                size_hint: (.2, .2)
                on_press: root.Sinal_matematico("*")

            Button:
                text: "4"
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.btnPress(4)

            Button:
                text: "5"
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.btnPress(5)

            Button:
                text: "6"
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.btnPress(6)

            Button:
                text: "-"
                font_size: 32
                size_hint: (.2, .2)
                on_press: root.Sinal_matematico("-")

            Button:
                text: "1"
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.btnPress(1)

            Button:
                text: "2"
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.btnPress(2)

            Button:
                text: "3"
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.btnPress(3)

            Button:
                text: "+"
                font_size: 32
                size_hint: (.2, .2)
                on_press: root.Sinal_matematico("+")

            Button:
                text: "+/-"
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.Negativo()

            Button:
                text: "0"
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.btnPress(0)

            Button:
                text: "."
                font_size: 32
                size_hint: (.2, .2)
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.num_decimal()

            Button:
                text: "="
                font_size: 32
                size_hint: (.2, .2)
                on_press: root.Igual()
           



                
    